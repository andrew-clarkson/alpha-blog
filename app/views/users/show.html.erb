<h1 class="text-center my-4"><%= @user.username %>'s Profile </h1>

<%= render 'shared/error', obj: @user %>
<%= gravatar_for(@user, size: 200) %>

<% if logged_in? && @user == current_user %>
    <div class="text-center my-4">
        <%= link_to "Edit Your Profile", edit_user_path, class: "btn btn-outline-warning" %>
    </div>
<% end %>


